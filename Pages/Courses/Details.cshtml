@page
@model nscccoursemap_BryanSteiss.Pages.Courses.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Course</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.CourseCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.CourseCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.Prerequisites)
        </dt>
        <dd class="col-sm-10">
            @if(Model.Course.Prerequisites!.Count >0){

            
            <ul>
            @foreach(var prerequisite in @Model.Course.Prerequisites!){
                <li>@prerequisite.Prerequisite!.CourseCode - @prerequisite.Prerequisite!.Title</li>
            }
            </ul>
            } else{
                <span>None</span>
            }
        </dd>
         <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.IsPrerequisiteFor)
        </dt>
        <dd class="col-sm-10">
            @if(@Model.Course.IsPrerequisiteFor!.Count > 0){

            
            <ul>
            @foreach(var prerequisite in @Model.Course.IsPrerequisiteFor!){
                <li>@prerequisite.Course!.CourseCode - @prerequisite.Course!.Title </li>
        
            }
            </ul>
            } else {
                <span>None</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Course?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
