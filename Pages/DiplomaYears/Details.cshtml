@page
@model nscccoursemap_BryanSteiss.Pages.DiplomaYears.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>DiplomaYear</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DiplomaYear.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DiplomaYear.Title)
        </dd>
         <dt class="col-sm-2">
            <span>CourseOffering</span> 
        </dt>
        <dd class="col-sm-10">

           @foreach (var co in Model.DiplomaYear.DiplomaYearSections!)
           {
           
            foreach (var c in co.CourseOfferings!)
                 {
                    <li>
                        @c.Semester!.Name
                        -@c.DiplomaYearSection!.DiplomaYear!.Diploma!.Title
                        -@c.Course!.CourseCode 
                        -@c.Course!.Title
                        -@c.Instructor!.FullName
                        -Directed Elective: @if (c.IsDirectedElective == true)
                        {
                            <span style="color: blue;">Yes</span>
                        }else
                        {
                            <span style="color: red;">No</span>
                        }

                    </li>
                 }

           

           }
            
        </dd>
            

    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.DiplomaYear?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
