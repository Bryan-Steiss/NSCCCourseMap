@page
@model nscccoursemap_BryanSteiss.Pages.AcademicYears.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>AcademicYear</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AcademicYear.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AcademicYear.Title)
        </dd>
        <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.AcademicYear.Semesters)
    </dt>
    <dd class="col-sm-10">
    <ul>
        @foreach (var semester in Model.AcademicYear.Semesters!.OrderBy(s => s.StartDate))
        {
            <li>@semester.Name</li>
        }
     </ul>
<dt class="col-sm-2">
            
            <span>Advising Assignments</span>
        </dt>
        <dd class="col-sm-10">
                @foreach (var ay in Model.AcademicYear.DiplomaYearSections!){
                    <li>
                        @ay.AcademicYear!.Title
                        -@ay.DiplomaYear!.Diploma!.Title
                        -@ay.AdvisingAssignment!.Instructor!.FullName
                    </li>
                }
           

        </dd>

    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.AcademicYear?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
