@page
@model nscccoursemap_BryanSteiss.Pages.Semesters.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Semester</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Semester.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Semester.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Semester.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Semester.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Semester.EndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Semester.EndDate)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Semester.CourseOfferings)
        </dt>
        <dd class="col-sm-10">

            @foreach (var co in Model.Semester.CourseOfferings!)
            {
               <li> 
                     @co.Course!.Title 
                    -@co.DiplomaYearSection!.DiplomaYear!.Title
                    -@co.Course!.CourseCode 
                    -@co.DiplomaYearSection!.DiplomaYear.Diploma!.Title 
                     

                    -@if(!(co.Instructor is null)){
                        @co.Instructor.FullName
                    } 

                    -Directed Elective: @if(@co.IsDirectedElective == true) {
                        <span style="color: blue;">Yes</span>
                    }
                    else{
                        <span style="color: red;">No</span>

                    }
               </li>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Semester?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
