@model nscccoursemap_BryanSteiss.Pages.Instructors.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Instructor</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Instructor.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Instructor.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Instructor.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Instructor.LastName)

        </dd><dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Instructor.AdvisingAssignments)
        </dt>
        <dd class="col-sm-10">

            @if(Model.Instructor.AdvisingAssignments != null){

            
             @foreach (var co in Model.Instructor.AdvisingAssignments){

                <li>
                     @* @co.Instructor!.FullName  *@
                    @* -@co.DiplomaYearSection!.Title *@
                    @co.DiplomaYearSection!.DiplomaYear!.Diploma!.Title 
                    @co.DiplomaYearSection!.DiplomaYear.Title
                </li>
               
            }

            } else {
                <span>none</span>
            }

        </dd>


    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Instructor?.Id">Edit</a> |
